// @cliArgs --board /ti/boards/MSP_EXP432P4111

/*
 *  spimaster.syscfg
 */

/* ======== RTOS ======== */
var RTOS = scripting.addModule("/ti/drivers/RTOS");
RTOS.name = "TI-RTOS";

/* ======== Board ======== */
var board = system.deviceData.board.name;

/* ======== Display ======== */
var Display = scripting.addModule("/ti/display/Display");
var display = Display.addInstance();
display.$hardware = system.deviceData.board.components.XDS110UART;

/* ======== GPIO ======== */
var GPIO = scripting.addModule("/ti/drivers/GPIO");

var gpio0 = GPIO.addInstance();
gpio0.$hardware = system.deviceData.board.components.LED0;
gpio0.$name = "CONFIG_GPIO_LED_0";

var gpio1 = GPIO.addInstance();
gpio1.$hardware = system.deviceData.board.components.LED1;
gpio1.$name = "CONFIG_GPIO_LED_1";

var gpio2 = GPIO.addInstance();
gpio2.$name = "CONFIG_SPI_MASTER_READY";
gpio2.mode = "Dynamic";

var gpio3 = GPIO.addInstance();
gpio3.$name = "CONFIG_SPI_SLAVE_READY";
gpio3.mode = "Dynamic";

/* ======== SPI ======== */
var SPI = scripting.addModule("/ti/drivers/SPI");

var spi0 = SPI.addInstance();
spi0.$name = "CONFIG_SPI_MASTER";
spi0.mode = "Four Pin SS Active Low";

if (board.match(/CC13|CC26/)) {
    if (board.match(/CC1352[P|R]/)) {
        gpio2.$hardware = system.deviceData.board.components.BUTTON0;
    }
    else {
        gpio2.gpioPin.$assign = "DIO15";
    }
    gpio3.gpioPin.$assign = "DIO21";

    spi0.$hardware = system.deviceData.board.components.SPI_FLASH;
    spi0.defaultTxBufferValue = "0xFF";
}
else if (board.match(/CC32/)) {
    gpio2.gpioPin.$assign = "P18";
    gpio3.gpioPin.$assign = "P03";

    spi0.turboMode = false;
    spi0.spi.dmaTxChannel.$assign = "UDMA_CH31";
    spi0.spi.dmaRxChannel.$assign = "UDMA_CH30";
    spi0.spi.sclkPin.$assign = "P05";
    spi0.spi.misoPin.$assign = "P06";
    spi0.spi.mosiPin.$assign = "P07";
    spi0.spi.ssPin.$assign = "P08";

}
else if (board.match(/MSP.EXP432E/)) {
    gpio2.gpioPin.$assign = "PM3";
    gpio3.gpioPin.$assign = "PQ0";

    spi0.defaultTxBufferValue = "0xFFFF";
    spi0.spi.$assign = "SSI2";
    spi0.spi.sclkPin.$assign = "PD3";
    spi0.spi.misoPin.$assign = "PD0";
    spi0.spi.mosiPin.$assign = "PD1";
    spi0.spi.ssPin.$assign = "PD2";
    spi0.spi.dmaTxChannel.$assign = "UDMA_CH13";
    spi0.spi.dmaRxChannel.$assign = "UDMA_CH12";
}
else if (board.match(/MSP.EXP432P/)) {
    gpio2.gpioPin.$assign = "P5.7";
    gpio3.gpioPin.$assign = "P6.0";

    spi0.spi.$assign = "EUSCI_A1"; /* Use the peripheral */
    spi0.spi.sclkPin.$assign = "P2.5";
    spi0.spi.dmaTxChannel.$assign = "DMA_CH2";
    spi0.spi.dmaRxChannel.$assign = "DMA_CH3";
    spi0.spi.dmaInterruptNumber.$assign = "DMA_INT2";
    spi0.spi.mosiPin.$assign = "P2.6";
    spi0.spi.misoPin.$assign = "P2.7";
    spi0.spi.ssPin.$assign = "P2.3";
    spi0.defaultTxBufferValue = "0xFF";
}
