        <td><control type="editbox" 
             value="value:this.funcList[6]" 
             enabled="false"/></td>
      </tr>
      <tr>
        <td><control type="label" label="Idle function 7" align="left"/></td>
        <td><control type="editbox" 
             value="value:this.funcList[7]" 
             enabled="false"/></td>
      </tr>
      <tr>
